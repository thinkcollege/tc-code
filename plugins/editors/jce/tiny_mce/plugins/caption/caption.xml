<?xml version="1.0" ?>
<install version="1.5.0" type="plugin" plugin="caption">
	<name>Caption</name>
	<version>1.5.2</version>
	<creationDate>20 March 2009</creationDate>
	<author>Ryan Demmer</author>
	<authorEmail>ryandemmer@gmail.com</authorEmail>
	<authorUrl>http://www.joomlacontenteditor.net</authorUrl>
	<copyright>Ryan Demmer</copyright>
	<license>GPL</license>
	<description><![CDATA[ 
	<p>Captions 1.5.2</p>
	<p>Changelog (from 1.5.1):</p>
	<ul>
		<li>Fixed: Incorrect URL for dialog.</li>
	</ul>
	<p>Changelog (from 1.5.0):</p>
	<ul>
		<li>Fixed: clear:both added to caption text div</li>
		<li>Fixed: Background color default parameter</li>
		<li>Fixed: Container Background color if set to blank value</li>
	</ul>
	]]></description>
	<icon>caption,caption_delete</icon>
	<layout>caption_layout</layout>
	<elements></elements>
	<files>
		<filename>editor_plugin.js</filename>
		<filename>caption.php</filename>
		<filename>classes/caption.php</filename>
		<filename>classes/index.html</filename>
		<filename>css/caption.css</filename>
        <filename>css/content.css</filename>
        <filename>css/index.html</filename>
        <filename>img/caption.gif</filename>
        <filename>img/caption_delete.gif</filename>
        <filename>img/caption_layout.gif</filename>
        <filename>img/index.html</filename>
        <filename>img/sample.jpg</filename>
		<filename>img/preview.jpg</filename>
        <filename>index.html</filename>
        <filename>js/caption.js</filename>
        <filename>js/index.html</filename>
        <filename>langs/en.js</filename>
        <filename>langs/index.html</filename>
	</files>
	<params group="defaults">
		<param name="caption_text_color" type="text" default="" label="CAPTION TEXT COLOR" description="CAPTION TEXT COLOR DESC" />
		<param name="caption_text_bgcolor" type="text" default="" label="CAPTION TEXT BGCOLOR" description="CAPTION TEXT BGCOLOR DESC" />
		<param name="caption_text_align" type="list" default="default" label="CAPTION TEXT ALIGN" description="CAPTION TEXT ALIGN DESC">
                <option value="default">NOT SET</option>
				<option value="left">ALIGN LEFT</option>
                <option value="center">ALIGN CENTER</option>
                <option value="justified">ALIGN JUSTIFIED</option>
                <option value="right">ALIGN RIGHT</option>
        </param>
		<param name="caption_text_padding" type="list" default="default" label="CAPTION TEXT PADDING" description="CAPTION TEXT PADDING DESC">
			<option value="default">NOT SET</option>
			<option value="0">0</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>
		<param name="caption_margin" type="list" default="default" label="CAPTION MARGIN" description="CAPTION MARGIN DESC">
			<option value="default">NOT SET</option>
			<option value="0">0</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>
		<param name="caption_padding" type="list" default="default" label="CAPTION PADDING" description="CAPTION PADDING DESC">
			<option value="default">NOT SET</option>
			<option value="0">0</option>
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
			<option value="7">7</option>
			<option value="8">8</option>
			<option value="9">9</option>
			<option value="10">10</option>
		</param>
		<param name="caption_bgcolor" type="text" default="" label="CAPTION BGCOLOR" description="CAPTION BGCOLOR DESC"/>
		<param name="caption_border" type="list" default="0" label="CAPTION BORDER ENABLE" description="CAPTION BORDER ENABLE DESC">
				<option value="0">NO</option>
                <option value="1">YES</option>
		</param>
		<param name="caption_border_width" type="list" default="default" label="CAPTION BORDER WIDTH" description="CAPTION BORDER WIDTH DESC">
				<option value="default">NOT SET</option>
				<option value="0">0</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
				<option value="7">7</option>
				<option value="8">8</option>
				<option value="9">9</option>
				<option value="thin">BORDER THIN</option>
				<option value="medium">BORDER MEDIUM</option>
				<option value="thick">BORDER THICK</option>
		</param>
		<param name="caption_border_style" type="list" default="default" label="CAPTION BORDER STYLE" description="CAPTION BORDER STYLE DESC">
				<option value="default">NOT SET</option>
				<option value="none">BORDER NONE</option>
				<option value="solid">BORDER SOLID</option>
				<option value="dashed">BORDER DASHED</option>
				<option value="dotted">BORDER DOTTED</option>
				<option value="double">BORDER DOUBLE</option>
				<option value="groove">BORDER GROOVE</option>
				<option value="inset">BORDER INSET</option>
				<option value="outset">BORDER OUTSET</option>
			    <option value="ridge">BORDER RIDGE</option>
		</param>
		<param name="caption_border_color" type="text" default="#000000" label="CAPTION BORDER COLOR" description="CAPTION BORDER COLOR DESC"/>
        <param name="caption_align" type="list" default="default" label="CAPTION ALIGN" description="CAPTION ALIGN DESC">
                <option value="default">NOT SET</option>
                <option value="top">ALIGN TOP</option>
                <option value="middle">ALIGN MIDDLE</option>
                <option value="bottom">ALIGN BOTTOM</option>
                <option value="left">ALIGN LEFT</option>
                <option value="right">ALIGN RIGHT</option>
        </param>
	</params>
	<languages>
		<language tag="en-GB">en-GB.com_jce_caption.ini</language>
	</languages>
	<help>
		<topic key="caption.about" title="Help About" />
		<topic key="caption.interface" title="Help Interface" />
		<topic key="caption.insert" title="Help Insert" />
	</help>
</install>
